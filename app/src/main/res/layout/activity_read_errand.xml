<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReadErrand">
    <View
            android:id="@+id/divider18"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/read_errand_profile_pic"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_manage"
            android:id="@+id/read_errand_menu"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
            android:id="@+id/read_errand_pic"
            app:layout_constraintTop_toBottomOf="@+id/divider17" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:id="@+id/divider17"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/read_errand_menu"/>
    <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp" app:srcCompat="@drawable/ic_baseline_account_circle_24"
            android:id="@+id/read_errand_profile_pic" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/read_errand_pic" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="닉네임"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_errand_nickname"
            android:textStyle="bold"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/read_errand_profile_pic"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/read_errand_pic"/>
    <TextView
            android:text="동네"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_errand_village"
            app:layout_constraintTop_toBottomOf="@+id/read_errand_nickname" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/read_errand_profile_pic"/>
    <TextView
            android:text="제목"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_height="wrap_content" android:id="@+id/read_errand_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/read_errand_emergency"/>
    <TextView
            android:text="카테고리"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_errand_category"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/read_errand_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="나와의거리"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_errand_distance"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/read_errand_category"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/read_errand_title"/>
    <TextView
            android:text="시간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_errand_time"
            app:layout_constraintStart_toEndOf="@+id/read_errand_distance" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/read_errand_title" android:layout_marginStart="8dp"/>
    <EditText
            android:text="가격"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_errand_price"
            android:inputType="number"
            android:maxLength="25"
            android:background="@null"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
    <TextView
            android:layout_width="412dp"
            android:layout_height="319dp"
            android:gravity="start|top"
            android:ems="10"
            android:text="내용"
            android:id="@+id/read_errand_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/read_errand_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.08"/>
    <TextView
            android:text="심부름 긴급도"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_errand_emergency"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/divider18" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/errand_read_won"
            app:layout_constraintStart_toEndOf="@+id/read_errand_price"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
    <TextView
            android:text="긴급시간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_errand_emergency_time"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/read_errand_emergency" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/divider18" android:layout_marginStart="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>