<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".HomeItems">

    <TextView
            android:text="심부름 종류"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content" android:id="@+id/home_item_emegency" tools:layout_editor_absoluteY="40dp"
            tools:layout_editor_absoluteX="64dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:orientation="horizontal">
        <ImageView
                android:src="@drawable/ic_baseline_add_photo_alternate_24"
                android:layout_width="100dp"
                android:layout_gravity="left"
                android:layout_height="match_parent" android:id="@+id/home_item_picture"/>

        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:orientation="vertical">
            <TextView
                    android:text="title"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content" android:id="@+id/home_item_title"/>

            <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="wrap_content"
                                                          android:layout_height="wrap_content"
                                                          android:orientation="horizontal">
                <TextView
                        android:text="village"
                        android:layout_width="wrap_content"
                        android:paddingLeft="25dp"
                        android:layout_height="wrap_content" android:id="@+id/home_item_village"/>

                <View
                        android:id="@+id/divider15"
                        android:layout_width="2dp"
                        android:paddingLeft="25dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider"
                />
                <TextView
                        android:text="distance"
                        android:layout_width="wrap_content"
                        android:paddingLeft="5dp"
                        android:layout_height="wrap_content" android:id="@+id/home_item_distance"/>
                <View
                        android:id="@+id/divider16"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="25dp"
                        android:background="?android:attr/listDivider"
                />
                <TextView
                        android:text="time"
                        android:layout_width="wrap_content"
                        android:paddingLeft="5dp"
                        android:layout_height="wrap_content" android:id="@+id/home_item_time"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="wrap_content"
                                                          android:layout_height="wrap_content">
            <EditText
                    android:text="price"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="25dp"
                    android:inputType="number"
                    android:maxLength="25"
                    android:background="@null"
                    android:layout_height="wrap_content" android:id="@+id/home_item_price"/>
            <TextView
                    android:text="원"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" android:id="@+id/home_item_won"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                    android:text="home_item_idx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/home_item_idx"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
            android:id="@+id/divider12"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/home_spinner"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.appcompat.widget.LinearLayoutCompat>