<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Signin">
    <Button
            android:text="인증번호 확인"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/recieve_no_check"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/prohibit"/>
    <TextView
            android:text="전화번호 인증"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/check_pn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.139"/>
    <TextView
            android:text="도움이 필요한 순간은 휴대폰 번호로 가입해요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/home_item_village"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/check_pn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.89"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="phone"
            android:hint="휴대폰 번호를 입력해주세요"
            android:ems="10"
            android:maxLength="13"
            android:id="@+id/type_pn"
            android:background="@drawable/memo_border"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454" app:layout_constraintTop_toBottomOf="@+id/home_item_village"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="인증문자 받기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/recieve_no_bt"

            app:layout_constraintTop_toBottomOf="@+id/type_pn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.454"/>
    <TextView
            android:text="전화번호가 변경되었나요? 이메일로 계정찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/find_by_email"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recieve_no_bt" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.496"/>
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/check_pn"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:hint="인증번호를 입력해주세요"
            android:background="@drawable/memo_border"
            android:ems="10"
            android:id="@+id/recieve_no"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/find_by_email" android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.509"/>
    <TextView
            android:text="어떤 경우에도 타인에게 공유하지 마세요!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prohibit"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recieve_no"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132"/>
</androidx.constraintlayout.widget.ConstraintLayout>