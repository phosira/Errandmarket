<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WriteErrand">

    <TextView
            android:text="시간 설정"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/write_errand_emergency_time"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/divider13"/>
    <View
            android:id="@+id/divider14"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/write_errand_emergency_time"/>
    <View
            android:id="@+id/divider13"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/write_errand_emergency" android:layout_marginTop="24dp"/>
    <TextView
            android:text="긴급도"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/write_errand_emergency"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/write_errand_recyclerView"
            android:layout_marginTop="24dp"/>
    <View
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/write_errand_price"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:hint=" 가격 (선택사항)"
            android:textSize="20sp"
            android:inputType="number"
            android:maxLength="25"
            android:background="@null"
            android:ems="10"
            android:id="@+id/write_errand_price"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="@+id/divider10"
    />
    <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/write_errand_category"/>
    <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/write_errand_title"/>
    <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/divider7" android:layout_marginTop="90dp"/>
    <TextView
            android:text="심부름 부탁하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="16dp"/>
    <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/write_errand_save"
            android:textSize="20sp"
            android:textColor="#00BCD4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:inputType="textPersonName"
            android:hint=" 제목"
            android:textSize="20sp"
            android:background="@null"
            android:ems="10"
            android:id="@+id/write_errand_title"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/divider14"/>
    <TextView
            android:text="카테고리"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/write_errand_category"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/write_errand_title" android:layout_marginTop="24dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/arrow_down_float"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/write_errand_category" app:layout_constraintTop_toTopOf="@+id/write_errand_category"
            android:backgroundTint="#00BCD4"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="@+id/write_errand_category"
            android:layout_marginBottom="9dp" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/write_errand_content"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@+id/divider11"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:hint="심부름 내용을 입력해주세요. 자세하게 입력할수록 매칭에 도움이 됩니다."
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="16dp"/>
    <ImageButton
            android:layout_width="65dp"
            android:layout_height="53dp" app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
            android:id="@+id/write_errand_photo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/divider7"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="0/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/write_errand_photo_cnt"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/write_errand_photo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/divider8" android:layout_marginStart="32dp"
            app:layout_constraintVertical_bias="0.0"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="330dp"
            android:layout_height="90dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/divider7"
            app:layout_constraintStart_toEndOf="@+id/write_errand_photo"
            android:id="@+id/write_errand_recyclerView" app:layout_constraintBottom_toTopOf="@+id/divider8"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>