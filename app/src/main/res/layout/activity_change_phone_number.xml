<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangePhoneNumber">

    <Button
            android:text="인증문자 받기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/find_pn_certify_bt"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/find_type_pn"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:hint="인증번호를 입력해주세요"
            android:background="@drawable/memo_border"
            android:ems="10"
            android:id="@+id/find_pn_type_certify"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/find_pn_certify_bt"/>
    <TextView
            android:text="어떤 경우에도 타인에게 공유하지 마세요!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/find_pn_prohibit"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/find_pn_type_certify"/>
    <Button
            android:text="변경완료"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/find_pn_set_up"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/find_pn_prohibit"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="phone"
            android:hint="변경된 휴대폰 번호를 입력해주세요"
            android:ems="10"
            android:maxLength="13"
            android:id="@+id/find_type_pn"
            android:background="@drawable/memo_border"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintTop_toBottomOf="@+id/divider6" android:layout_marginTop="24dp"/>
    <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/find_pn_next"/>
    <TextView
            android:text="계정 전화번호 변경"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/find_pn_next"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>